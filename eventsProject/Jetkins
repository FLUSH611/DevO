pipeline {
    agent any
    tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }
    stages {
        stage('Clean Workspace') {
            steps {
                echo 'Cleaning Jenkins workspace...'
                deleteDir()  // This will clean the workspace
            }
        }

        stage('Git Checkout') {
            steps {
                echo 'Fetching code from GitHub...'
                git branch: 'main', url: 'https://github.com/FLUSH611/DevO.git'
                sh 'ls -alh'  // List files in the workspace to check if pom.xml is there
            }
        }

        stage('Maven Clean') {
            steps {
                echo 'Cleaning project...'
                script {
                    def pomFile = 'pom.xml'
                    if (fileExists(pomFile)) {
                        echo "Found pom.xml, running mvn clean..."
                        // Ensure that we're in the right directory
                        sh 'mvn clean'
                    } else {
                        error "pom.xml not found, unable to run mvn clean"
                    }
                }
            }
        }

        stage('Compile Stage') {
            steps {
                script {
                    // Checking if pom.xml is present before compiling
                    def pomFile = 'pom.xml'
                    if (fileExists(pomFile)) {
                        echo "pom.xml found, compiling project..."
                        sh 'mvn compile'
                    } else {
                        error "pom.xml not found, unable to compile"
                    }
                }
            }
        }

        stage('Package Stage') {
            steps {
                script {
                    // Check if pom.xml exists before packaging
                    def pomFile = 'pom.xml'
                    if (fileExists(pomFile)) {
                        echo "pom.xml found, creating package..."
                        sh 'mvn package -DskipTests'
                    } else {
                        error "pom.xml not found, unable to package"
                    }
                }
            }
        }
    }

    post {
        success {
            echo 'Build completed successfully.'
        }
        failure {
            echo 'Build failed.'
        }
    }
}
